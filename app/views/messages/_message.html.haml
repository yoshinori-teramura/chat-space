
.right-content__main__box{data: {id: message.id}}
  .right-content__main__box__name
    = message.user.name
  .right-content__main__box__timestamp
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.right-content__main__message
  - if message.content.present?
    %p.lower-message__content
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
  